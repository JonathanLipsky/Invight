<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lokid.projectfalcon.create_event_fragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relitive_layout_for_create_event">
    <EditText
        android:id="@+id/event_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Event Description..."
        android:layout_below="@+id/event_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="55dp"
        android:inputType="textMultiLine"
        android:text="Event Name..."
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/event_desc"
        android:layout_marginTop="23dp" />

    <EditText
        android:id="@+id/event_start_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:inputType="date"
        android:text="Start Date..."
        android:layout_below="@+id/event_desc"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/event_end_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="date"
        android:text="End Date..."
        android:layout_above="@+id/event_start_time"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/event_start_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="time"
        android:text="Start Time..."
        android:layout_below="@+id/event_start_date"
        android:layout_alignStart="@+id/event_start_date" />

    <EditText
        android:id="@+id/event_end_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        android:text="End Time..."
        android:layout_alignBaseline="@+id/event_start_time"
        android:layout_alignBottom="@+id/event_start_time"
        android:layout_alignStart="@+id/event_end_date" />

        <CheckBox
            android:id="@+id/privvy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/invite_friends"
            android:layout_alignBottom="@+id/invite_friends"
            android:layout_alignStart="@+id/event_start_time"
            android:text="Check if private" />

    <Button
        android:id="@+id/create_event"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Create Event" />

    <Button
        android:id="@+id/invite_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invite Friends"
        android:layout_above="@+id/create_event"
        android:layout_alignEnd="@+id/event_end_time"
        android:layout_marginBottom="11dp" />

        <Spinner
            android:id="@+id/event_types"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/create_event"
            android:layout_alignTop="@+id/event_name"
            android:layout_marginTop="56dp"
            android:entries="@array/event_types"
            android:padding="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:prompt="@string/event_prompt"
            android:spinnerMode="dropdown" />

</RelativeLayout>

</FrameLayout>
